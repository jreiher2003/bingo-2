<!DOCTYPE html>
<html ng-app="hensus-bingo">
<head>
    <meta charset="utf-8">
    <title>Hesus Bingo!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="ico/favicon.png">


    <script src="js/vendors/socket.io.min.js"></script>
    <script src="js/chat.js"></script>
    <script>
        window.onload = function() {
          var socket = io.connect('http://localhost:8000');
          socket.on('newGame', function (data) {
            $('#ui-game-sign').html(data);
          });
        }
    </script>
</head>

<body>

<div class="container" ng-controller="Dashboard">
    <div class="row">
        <div class="span6">
            <h1 id="logo">Hesus Bingo!</h1>

            <div class="row">
                <div class="span5 offset1">
                    <div id="card" class="clearfix">
                        <div class="card_row"
                            ng-repeat="element in elements">
                            <img
                                ng-hide="!element.value"
                                ng-src="/img/{{ element.value }}.jpg"
                                ng-click="chooseElement(element)"
                            />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span5 offset1">
                    <button class="btn btn-large btn-block btn-primary" type="button" ng-click="bingo()">BINGO!</button>
                </div>
            </div>
        </div>
        <div class="span4 offset2">
            <img src="http://placehold.it/300x300" alt="hesus" />
            <br/><br/>
            <div id="ui-game-sign" class="well">
            </div>
            <div class="row">
                <div class="revelation span4">
                    <h3>Hesus latest revelation</h3>
                    <img src="http://placehold.it/100x100" alt="revelation" class="zen" />
                    <div class="next">
                        <p>Next revelation in <span class="label" id="time-left">5</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="/js/vendors/socket.io.min.js"></script>
<script src="/js/vendors/jquery.min.js"></script>
<script src="/js/vendors/bootstrap.min.js"></script>
<script src="/js/vendors/angular.min.js"></script>
<script src="/js/application.js"></script>
</body>
</html>
