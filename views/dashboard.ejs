<!DOCTYPE html>
<html ng-app="hensus-bingo">
<head>
    <meta charset="utf-8">
    <title>Hesus Bingo!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="css/styles.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="ico/favicon.png">
</head>

<body>

<div id="bingo">
    <img src="/img/bingo.png" alt="bingo" />
</div>

<div class="container" ng-controller="Dashboard">
    <div id="card">
        <div class="card-row" ng-repeat="element in elements" ng-class="{element.clicked: clicked}">
            <div class="item">
                <img
                        ng-hide="!element.value"
                        ng-src="/img/icons/{{ element.value }}.png"
                        ng-click="chooseElement(element)" />
            </div>
        </div>
    </div>

    <div id="revelation">
        <img
                id="latest"
                ng-hide="!nextRevelationElement"
                ng-src="/img/icons/{{ nextRevelationElement }}.png" />
        <div id="next">{{ nextRevelation }}</div>
    </div>
</div>

<script src="/js/vendors/socket.io.min.js"></script>
<script src="/js/vendors/jquery.min.js"></script>
<script src="/js/vendors/angular.min.js"></script>
<script src="/js/application.js"></script>
</body>
</html>
